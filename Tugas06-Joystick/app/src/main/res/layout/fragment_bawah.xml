<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mrizkijuanda.tugas06_joystick.MainActivityFragment"
    tools:showIn="@layout/activity_main">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATAS"
        android:id="@+id/btnAtas"
        android:layout_above="@+id/btnKanan"
        android:layout_alignLeft="@+id/btnBawah"
        android:layout_alignStart="@+id/btnBawah"
        android:onClick="onClickButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAWAH"
        android:id="@+id/btnBawah"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KANAN"
        android:id="@+id/btnKanan"
        android:layout_above="@+id/btnBawah"
        android:layout_toRightOf="@+id/btnBawah"
        android:layout_toEndOf="@+id/btnBawah"
        android:onClick="onClickButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KIRI"
        android:id="@+id/btnKiri"
        android:layout_above="@+id/btnBawah"
        android:layout_toLeftOf="@+id/btnBawah"
        android:layout_toStartOf="@+id/btnBawah"
        android:onClick="onClickButton"/>
</RelativeLayout>
