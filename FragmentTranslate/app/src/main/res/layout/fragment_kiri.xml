<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mrizkijuanda.fragmenttranslate.MainActivityFragment"
    tools:showIn="@layout/activity_main">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TERJEMAHKAN_KE_INGGRIS"
        android:id="@+id/btnTerjemahInggris"
        android:onClick="onClickTerjemahkanInggris"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnTerjemahAceh"
        android:layout_alignEnd="@+id/btnTerjemahAceh" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TERJEMAHKAN_KE_INDONESIA"
        android:id="@+id/btnTerjemahIndonesia"
        android:onClick="onClickTerjemahkanIndonesia"
        android:layout_below="@+id/btnTerjemahInggris"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TERJEMAHKAN_KE_ACEH"
        android:id="@+id/btnTerjemahAceh"
        android:onClick="onClickTerjemahkanAceh"
        android:layout_below="@+id/btnTerjemahIndonesia"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
