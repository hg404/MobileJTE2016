<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mrizkijuanda.tugas03_terjemahkan.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTulisan"
        android:text="@string/TULISAN_HELLO_WORD"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TERJEMAHKAN_KE_INGGRIS"
        android:id="@+id/radiobtnTerjemahInggris"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/txtTulisan"
        android:layout_centerHorizontal="true"
        android:onClick="onClickTerjemahkanInggris" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TERJEMAHKAN_KE_INDONESIA"
        android:id="@+id/radiobtnTerjemahIndonesia"
        android:onClick="onClickTerjemahkanIndonesia"
        android:layout_below="@+id/radiobtnTerjemahInggris"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:checked="false" />


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TERJEMAHKAN_KE_ACEH"
        android:id="@+id/radiobtnTerjemahAceh"
        android:onClick="onClickTerjemahkanAceh"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/radiobtnTerjemahIndonesia"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
